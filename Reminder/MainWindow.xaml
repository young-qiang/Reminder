<hc:Window
    x:Class="Reminder.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:local="clr-namespace:Reminder"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Reminder"
    Width="260"
    Height="280"
    Closing="Window_Closing"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">


    <Grid>
        <!--<Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>-->
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>


        <hc:NumericUpDown
            x:Name="xxjg"
            Grid.Row="0"
            Width="170"
            Height="30"
            hc:InfoElement.Title="休息间隔（分钟）"
            hc:InfoElement.TitlePlacement="Left"
            hc:InfoElement.TitleWidth="110"
            Maximum="120"
            Minimum="1"
            Style="{StaticResource NumericUpDownExtend}"
            Value="60" />

        <hc:NumericUpDown
            x:Name="xxqtx"
            Grid.Row="1"
            Width="170"
            Height="30"
            hc:InfoElement.Title="休息前提醒（秒）"
            hc:InfoElement.TitlePlacement="Left"
            hc:InfoElement.TitleWidth="110"
            Maximum="120"
            Minimum="1"
            Style="{StaticResource NumericUpDownExtend}"
            Value="30" />

        <hc:NumericUpDown
            x:Name="xxsc"
            Grid.Row="2"
            Width="170"
            Height="30"
            hc:InfoElement.Title="休息时长（分钟）"
            hc:InfoElement.TitlePlacement="Left"
            hc:InfoElement.TitleWidth="110"
            Maximum="120"
            Minimum="1"
            Style="{StaticResource NumericUpDownExtend}"
            Value="2" />

        <Button
            x:Name="btn"
            Grid.Row="3"
            Width="160"
            Click="Button_Click"
            Content="开始" />

        <CheckBox
            x:Name="AutoStartCheckBox"
            Grid.Row="4"
            Margin="40,0,0,0"
            Checked="AutoStartCheckBox_Checked"
            Content="开机自动启动"
            Unchecked="AutoStartCheckBox_Unchecked" />

        <CheckBox
            x:Name="ShowCountShutdown"
            Grid.Row="5"
            Margin="40,0,0,0"
            Checked="ShowCountShutdown_Checked"
            Content="开启倒计时"
            IsChecked="True"
            Unchecked="ShowCountShutdown_Unchecked" />


        <!--  系统托盘图标  -->
        <hc:NotifyIcon
            Icon="/Reminder;component/Assets/favicon.ico"
            IsBlink="False"
            MouseDoubleClick="NotifyIcon_MouseDoubleClick"
            Text="Reminder"
            Visibility="Visible">
            <hc:NotifyIcon.ContextMenu>
                <ContextMenu>
                    <MenuItem Click="NotifyIcon_MouseDoubleClick" Header="打开主界面" />
                    <MenuItem Command="hc:ControlCommands.ShutdownApp" Header="退出程序" />
                </ContextMenu>
            </hc:NotifyIcon.ContextMenu>
        </hc:NotifyIcon>
    </Grid>



</hc:Window>
